#initialising a array
days_of_week = Array[ "Mon", "Tues", "Wed", "Thu", "Fri", "Sat", "Sun" ]
puts days_of_week

#getting the size of array
puts days_of_week.size

#getting type of elements in strings
puts days_of_week[0].class

#retrieving a few elements
puts days_of_week[0, 3]

#slice of a few elements
puts days_of_week.slice(1..3)


